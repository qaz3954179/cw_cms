@using GMS.Site.Contract.Model;
@model List<Advert>
@{
    ViewBag.Title = "广告列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="pull-right">
        <a class="btn btn-link" href="/Site/Advert/Edit/0">新增</a>
    </div>
</div>
<div class="row-fluid">
    <table class="table table-striped">
        <tbody>
            <tr>
                <td>
                    名称
                </td>
                <td>
                    广告链接
                </td>
                <td>
                    广告图片地址
                </td>
                <td>
                    操作
                </td>
            </tr>
            @foreach (var adv in Model)
            {
                <tr>
                    <td>@adv.Name</td>
                    <td>@adv.Link</td>
                    <td>@adv.ImageUrl</td>
                    <td><a class="btn btn-link" href="/Site/Advert/Edit/@adv.ID">编辑</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>