@using GMS.Site.Contract.Model;
@model Advert
@{
    ViewBag.Title = "广告编辑页面";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="pull-right">
        <a class="btn btn-link" href="/Site/Advert/Index">返回</a>
    </div>
</div>
<div class="row-fluid">
    @using (@Html.BeginForm("Edit", "Manager"))
    {
        <div class="portlet-body form-horizontal form-bordered form-row-stripped">
            <div class="row-fluid">
                @Html.Hidden("ID", Model.ID)
                <div class="control-group">
                    <label class="control-label">名称</label>
                    <div class="controls">
                        @Html.TextBox("Name", Model.Name)
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">链接</label>
                    <div class="controls">
                        @Html.TextBox("Link", Model.Link)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">图片地址</label>
                    <div class="controls">
                        @Html.TextBox("ImageUrl", Model.ImageUrl)
                    </div>
                </div>

                <button class="btn btn-large" type="submit">提交</button>
            </div>
        </div>
    }
</div>